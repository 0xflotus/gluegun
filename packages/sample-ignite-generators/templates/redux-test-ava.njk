import test from 'ava'
import Actions, { reducer, INITIAL_STATE } from '../../App/Redux/{{ props.name }}Redux'

test('attempt', t => {
  const state = reducer(INITIAL_STATE, Actions.{{ props.name | camelCase }}Request('data'))

  t.true(state.fetching)
})

test('success', t => {
  const state = reducer(INITIAL_STATE, Actions.{{ props.name | camelCase }}Success('hi'))

  t.is(state.payload, 'hi')
})

test('failure', t => {
  const state = reducer(INITIAL_STATE, Actions.{{ props.name | camelCase }}Failure(99))

  t.false(state.fetching)
  t.true(state.error)
})
