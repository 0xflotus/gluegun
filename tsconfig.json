{
  "compilerOptions": {
    "allowSyntheticDefaultImports": false,
    "experimentalDecorators": true,
    "lib": ["es2016", "es2016.array.include", "scripthost"],
    "module": "CommonJS",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "sourceMap": true,
    "outFile": "build/gluegun.js",
    "strict": false,
    "target": "es6"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "src/fixtures"]
}
